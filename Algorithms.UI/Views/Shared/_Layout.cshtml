@{ 
    var title = !string.IsNullOrWhiteSpace(ViewBag.Title) 
        ? "Algorytmy i struktury danych - " + ViewBag.Title 
        : "Algorytmy i struktury danych";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Algorytmy i struktury danych", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Struktury", "Index", "DataStructures")</li>
                    <li>@Html.ActionLink("Podstawy", "Index", "BasicAlgorithms")</li>
                    @*<li>@Html.ActionLink("Sortowanie", "", "")</li>*@
                    @*<li>@Html.ActionLink("Dziel i zwyciężaj", "", "")</li>*@
                    @*<li>@Html.ActionLink("Zachłanne", "", "")</li>*@
                    @*<li>@Html.ActionLink("Dynamiczne", "", "")</li>*@
                    @*<li>@Html.ActionLink("Grafowe", "", "")</li>*@
                </ul>
            </div>
        </div>
    </nav>
    <main class="container body-content">
        @RenderBody()
        <hr />
        <footer class="row">
            <div class="col-lg-12">
                <p>&copy; <a href="https://pl.linkedin.com/in/krzysztofkogut">Krzysztof Kogut</a> @DateTime.Now.Year - Algorytmy i struktury danych</p>
            </div>
        </footer>
    </main>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
